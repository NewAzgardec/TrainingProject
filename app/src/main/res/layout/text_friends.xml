<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/friendPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@drawable/ic_ab_done" />

    <TextView
        android:id="@+id/friendFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/friendPhoto"
        android:layout_toRightOf="@+id/friendPhoto"
        android:paddingLeft="10dp"
        android:paddingTop="22dp"
        android:paddingRight="10dp"
        android:paddingBottom="22dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="?attr/textcolor"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/isFriendOnline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/friendFullName"
        android:layout_alignRight="@+id/friendFullName"
        android:layout_alignParentTop="true"
        android:paddingTop="22dp"
        android:paddingRight="10dp"
        android:paddingBottom="22dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="?attr/textcolor"
        android:textSize="18sp" />

</RelativeLayout>
